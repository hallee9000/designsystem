.case-items{
  display: flex;
  flex-wrap: wrap;
  margin: 0 -15px;
  .case-item{
    flex: 0 0 200px;
    margin-bottom: 30px;
    padding: 0 15px;
    .item-card{
      position: relative;
      display: block;
      .card-cover{
        margin: 0;
        padding-top: 100%;
        color: #333;
        background-size: cover;
        background-position: center;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        box-shadow: 0 5px 10px rgba(0, 0, 0, 0.16);
        transition: all 0.4s;
      }
      .card-title{
        margin: 0;
        padding: 10px 0;
        color: #333;
      }
      &:hover{
        .card-cover{
          box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
        }
      }
    }
  }
}

@media (max-width: 767px) {
  .case-items{
    .case-item{
      flex: 0 0 50%;
    }
  }
}

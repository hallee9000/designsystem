.layout-post{
  .container{
    max-width: 800px;
  }
  .post-title{
    h1{
      margin-bottom: 0;
    }
    span{
      color: #999;
    }
  }
  .post-meta{
    margin: 20px 0;
    padding: 15px;
    color: #999;
    background: #F8F8F8;
    p{
      margin: 0;
      font-size: 14px;
    }
  }
  .post-content{
    margin-top: 50px;
    line-height: 2;
    color: #404040;
    h2{
      margin: 60px 0;
      margin-bottom: 30px;
      text-align: center;
    }
    h4{
      margin: 5px 0;
    }
    >blockquote{
      margin: 0;
      margin-bottom: 20px;
      padding: 0 15px;
      color: #666;
      border-left: 5px solid #F3F3F3;
      p{
        margin: 0;
      }
    }
    ul{
      padding-left: 25px;
      list-style: circle outside;
      li{
        p{
          margin: 5px 0;
        }
        blockquote{
          margin: 0;
          margin-bottom: 15px;
          color: #888;
        }
        img{
          margin: 20px 0;
          border: 1px solid #F3F3F3;
        }
      }
    }
    >ul{
      margin-bottom: 40px;
    }
    >p{
      margin-bottom: 20px;
    }
    .content-image{
      margin:50px auto;
      text-align: center;
    }
  }
}
